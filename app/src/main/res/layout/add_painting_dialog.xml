<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/mediumPadding">

    <!-- TODO: add text labels instead of reliance on hint attributes -->
    <!-- TODO: add hints / labels into strings file -->
    <EditText
        android:id="@+id/edit_painting_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Painting title"
        android:inputType="textMultiLine"
        android:scrollbars="vertical" />

    <EditText
        android:id="@+id/edit_painting_artist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Painting artist"
        android:inputType="textMultiLine"
        android:scrollbars="vertical" />

    <EditText
        android:id="@+id/edit_painting_room"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Painting room"
        android:inputType="textMultiLine"
        android:scrollbars="vertical" />

    <EditText
        android:id="@+id/edit_painting_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Painting description"
        android:inputType="textMultiLine"
        android:scrollbars="vertical" />

    <EditText
        android:id="@+id/edit_painting_year"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Painting year"
        android:maxLength="4"
        android:inputType="number"
        android:scrollbars="vertical" />

    <EditText
        android:id="@+id/edit_painting_rank"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Painting rank (0-5)"
        android:inputType="number"
        android:maxLength="1"
        android:ems="10"
        android:scrollbars="vertical" />

</LinearLayout>